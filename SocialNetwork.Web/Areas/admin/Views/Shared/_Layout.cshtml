@using System.Web.Optimization
@using SocialNetwork.Web.App_GlobalResources
@using SocialNetwork.Web.Core
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/bootstrap/bootstrap")
        @Styles.Render("~/Content/css-admin")
        @RenderSection("styles", false)

        @Scripts.Render("~/Scripts/jquery")
        @Scripts.Render("~/Scripts/modernizr")
    </head>
    <body>
        <div id="wrap">
            <div id="main" class="container">
                <h3 class="text-muted">
                    @Resources.MainName <small>[admin]</small>
                </h3>
                <ul class="nav nav-justified">
                    @Html.ActionMenuItem("Главная страница","Index","Home", ViewContext.RouteData.Values["controller"] as string, ViewContext.RouteData.Values["action"] as string)
                    @Html.ActionMenuItem("Пользователи","Index","Users", ViewContext.RouteData.Values["controller"] as string, ViewContext.RouteData.Values["action"] as string)
                    @Html.ActionMenuItem("Логи","Index","Elmah", ViewContext.RouteData.Values["controller"] as string, ViewContext.RouteData.Values["action"] as string)
                    @Html.ActionMenuItem("Статистика базы данных","Index","DatabaseStats", ViewContext.RouteData.Values["controller"] as string, ViewContext.RouteData.Values["action"] as string)
                </ul>
                @RenderBody()
            </div>
        </div>

        <footer>
            <div class="container text-center">
                @Html.GetCopyrightText() @Html.GetRootLink()
            </div>
        </footer>

        @Scripts.Render("~/Scripts/bootstrap")
        @RenderSection("scripts", false)
    </body>
</html>
