@using System.Web.Optimization
@using SocialNetwork.Web
@using SocialNetwork.Web.Core
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css-admin")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">@Resources.MainName [Admin]</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Something</a></li>
                            <li><a href="#about">Something else</a></li>
                            <li><a href="#contact">else</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()

        <footer class="navbar-fixed-bottom row">
            <div class="container">
                Copyright &copy; AppiusCompany 2013 | Version: @Html.ApplicationVersion()
            </div>
        </footer>

        @Scripts.Render("~/Scripts/bootstrap")
        @RenderSection("scripts", false)
    </body>
</html>
