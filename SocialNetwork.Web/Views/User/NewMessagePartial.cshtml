@model SocialNetwork.Web.ViewModels.NewMessageViewModel

<div class="modal fade" id="NewMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("NewMessage", "User", FormMethod.Post, new {@class = "form-horizontal", @onsubmit = "$(this).find('input[type=\"submit\"]').attr('disabled', 'disabled');"}))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Новое сообщение</h4>
                </div>
                <div class="modal-body">
                    <div class="msg-new">
                        <fieldset>
                            @Html.HiddenFor(m => m.Email, new {@value = Model.Email})

                            <div class="form-group">
                                @Html.LabelFor(m => m.ToUser, new {@class = "control-label"})

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.ToUser, new {@class = "form-control", @value = Model.ToUser, @disabled = "disabled"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, new {@class = "control-label"})

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.Title, new {@placeholder = "Title", @class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.MsgText, new {@class = "control-label"})
                
                                <div class="controls">
                                    @Html.TextAreaFor(m => m.MsgText, new {@placeholder = "Message Text", @class = "form-control", @rows = "5"})
                                    @Html.ValidationMessageFor(m => m.MsgText)
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                    <input type="submit" value="Отправить" class="btn btn-primary" />
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->