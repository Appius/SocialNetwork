@using SocialNetwork.Web.App_GlobalResources
<ul class="nav pull-right navbar-nav">
    @if (Request.IsAuthenticated)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                @User.Identity.Name<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li>
                    @Html.ActionLink(@Resources.Edit, "Edit", "Account")
                </li>
                <li>
                    @Html.ActionLink(@Resources.ChangePassword, "Edit", "Account", new {@act="changepass"}, null)
                </li>
                <li>
                    @Html.ActionLink(@Resources.Exit, "LogOff", "Account")
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                @Resources.Guest <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(@Resources.Entrance, "LogOn", "Account")</li>
                <li>@Html.ActionLink(@Resources.Registration, "Register", "Account")</li>
            </ul>
        </li>
    }
</ul>